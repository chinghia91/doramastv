version: '3'
services:
  app:
    build: ./infra/app
    volumes:
      - ./:/var/www
  web:
    build: ./infra/web
    ports:
      - "8282:80"
    volumes:
      - ./:/var/www
  db:
    image: mysql:5.7
    ports:
      - "3308:3306"
    volumes:
      - "./storage/mysql/db:/var/lib/mysql"
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: eadrama
      MYSQL_ALLOW_EMPTY_PASSWORD: 1
  backend:
    build: ./infra/backend
